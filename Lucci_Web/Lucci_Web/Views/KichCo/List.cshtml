@model List<Lucci_Web.Models.KichCo>
@{
    ViewBag.Title = "List";
}

<style>
    table {
        border-collapse: collapse;
        width: 25%;
    }

    tr:nth-child(odd) {
        background: whitesmoke;
    }

    th, td {
        text-align: center;
        border: 1px solid black;
        padding: 10px;
    }

    .button {
        padding: 8px;
        background: gray;
        color: white;
    }

    .create {
        position: relative;
        top: 20px;
    }
</style>
<h2>Danh sách kích cỡ có trong hệ thống</h2>
<table>
    <tr>
        <th>Tên kích cỡ</th>
        <th>Chức năng</th>
    </tr>
    @foreach (var kichCo in Model)
    {
        <tr>
            <td>@kichCo.TenGoi.ToString()</td>
            <td>
                <a href="~/KichCo/Edit?id=@kichCo.id">Chỉnh sửa</a>
            </td>
        </tr>
    }
</table>
<a href="~/KichCo/Create" class="button create">Tạo mới</a>



